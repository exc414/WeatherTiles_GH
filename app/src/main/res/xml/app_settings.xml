<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.preference.PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Defining preference_category overrides the default layout -->
    <android.support.v7.preference.PreferenceCategory
        android:layout="@layout/preference_category"
        android:title="General">

        <android.support.v7.preference.Preference
            android:key="key1"
            android:title="Maximum Number of Tiles"
            android:summary="" />

    </android.support.v7.preference.PreferenceCategory>

    <!-- Defining preference_category overrides the default layout -->
    <android.support.v7.preference.PreferenceCategory
        android:layout="@layout/preference_category"
        android:title="New Tile Behaviour">

        <android.support.v7.preference.SwitchPreferenceCompat
            android:key="key2"
            android:title="Enable Blink Animation"
            android:summary="A newly added tile will blink for a couple of seconds."
            android:defaultValue="true" />

        <android.support.v7.preference.SwitchPreferenceCompat
            android:key="key3"
            android:title="Enable Automatic Scrolling"
            android:summary="Automatically scrolls to the newly added tile."
            android:defaultValue="true" />

    </android.support.v7.preference.PreferenceCategory>

</android.support.v7.preference.PreferenceScreen>